{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "envPrefix": {
      "type": "string",
      "defaultValue": "demo",
      "metadata": {
        "description": "Common prefix for all resource naming"
      }
    },
    "envLocation": {
      "type": "string",
      "defaultValue": "West US",
      "allowedValues": [
        "West US",
        "West US 2",
        "East US",
        "East US 2",
        "Central US"
      ],
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "demoadmin",
      "metadata": {
        "description": "Admin username for environment"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for environment"
      }
    },
    "assetLocation": {
      "type": "string",
      "defaultValue": "https://github.com/mtan91/Test",
      "metadata": {
        "description": "Storage Account/GitHub base uri for required files"
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "testgofinack02",
      "metadata": {
        "description": "Storage account name (3-24 chars, can contain only lowercase letters and numbers)"
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "vnet-172.31.0.0-16",
      "metadata": {
        "description": "Virtual network (VNET) name"
      }
    },
    "domainName": {
      "type": "string",
      "defaultValue": "gofinack.com",
      "metadata": {
        "description": "FQDN of the Active Directory"
      }
    },
    "dcServerName": {
      "type": "string",
      "defaultValue": "vm-dc01",
      "metadata": {
        "description": "Domain controller VM name"
      }
    },
    "adfsServerName": {
      "type": "string",
      "defaultValue": "vm-adfs01",
      "metadata": {
        "description": "ADFS server VM name"
      }
    },
    "wapServerName": {
      "type": "string",
      "defaultValue": "vm-wap01",
      "metadata": {
        "description": "Web application proxy (WAP) server VM name"
      }
    }
  },
  "variables": {
    "storageAccount": {
      "name": "[parameters('storageAccountName')]",
      "type": "Standard_RAGRS",
      "location": "[parameters('envLocation')]",
      "endpoint": "blob.core.windows.net"
    },
    "virtualNetwork": {
      "name": "[parameters('vnetName')]",
      "location": "[parameters('envLocation')]",
      "prefix": "172.31.0.0/16",
      "subnet1Name": "vsnet-172.31.253.0-24-servers",
      "subnet1Prefix": "172.31.253.0/24"
    },
    "vmImageReference": {
      "publisher": "MicrosoftWindowsServer",
      "offer": "WindowsServer",
      "sku": "2012-R2-Datacenter",
      "version": "latest"
    },
    "wapPublicDNS": "[concat(parameters('envPrefix'), 'sso')]",
    "webPublicDNS": "[concat(parameters('envPrefix'), 'sso')]",
    "vmConfiguration": {
      "dc": {
        "name": "[parameters('dcServerName')]",
        "size": "Standard_A1"
      },
      "adfs": {
        "name": "[parameters('adfsServerName')]",
        "size": "Standard_A1"
      },
      "wap": {
        "name": "[parameters('wapServerName')]",
        "size": "Standard_A1"
      }
    }
  },
  "resources": [
    {
      "name": "NetworkAndStorage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/NetworkAndStorage.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "storageAccount": {
            "value": "[variables('storageAccount')]"
          }
        }
      }
    },
    {
      "name": "DomainController",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/NetworkAndStorage"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/DomainController.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "virtualNetworkId": {
            "value": "[reference('NetworkAndStorage').outputs.virtualNetworkId.value]"
          },
          "storageAccount": {
            "value": "[variables('storageAccount')]"
          },
          "storageAccountId": {
            "value": "[reference('NetworkAndStorage').outputs.storageAccountId.value]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "vmImageReference": {
            "value": "[variables('vmImageReference')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').dc.name]"
          },
          "vmSize": {
            "value": "[variables('vmConfiguration').dc.size]"
          }
        }
      }
    },
    {
      "name": "UpdateVNetDNS",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/NetworkAndStorage",
        "Microsoft.Resources/deployments/DomainController",
        "Microsoft.Resources/deployments/DomainControllerDSC"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/UpdateVNetDNS.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "DNSaddress": {
            "value": "[reference('DomainController').outputs.ipAddress.value]"
          }
        }
      }
    },
    {
      "name": "ADFSserver",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/NetworkAndStorage"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/ADFSserver.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "virtualNetworkId": {
            "value": "[reference('NetworkAndStorage').outputs.virtualNetworkId.value]"
          },
          "storageAccount": {
            "value": "[variables('storageAccount')]"
          },
          "storageAccountId": {
            "value": "[reference('NetworkAndStorage').outputs.storageAccountId.value]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "vmImageReference": {
            "value": "[variables('vmImageReference')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').adfs.name]"
          },
          "vmSize": {
            "value": "[variables('vmConfiguration').adfs.size]"
          }
        }
      }
    },
    {
      "name": "WAPServer",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/NetworkAndStorage"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/WAPServer.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "virtualNetworkId": {
            "value": "[reference('NetworkAndStorage').outputs.virtualNetworkId.value]"
          },
          "storageAccount": {
            "value": "[variables('storageAccount')]"
          },
          "storageAccountId": {
            "value": "[reference('NetworkAndStorage').outputs.storageAccountId.value]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "vmImageReference": {
            "value": "[variables('vmImageReference')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').wap.name]"
          },
          "vmSize": {
            "value": "[variables('vmConfiguration').wap.size]"
          }
        }
      }
    },
    {
      "name": "DomainControllerDSC",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/DomainController"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/DomainControllerDSC.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').dc.name]"
          }
        }
      }
    },
    {
      "name": "DomainControllerCS",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/DomainController",
        "Microsoft.Resources/deployments/DomainControllerDSC",
        "Microsoft.Resources/deployments/ADFSserverDSC",
        "Microsoft.Resources/deployments/WAPServerDSC"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/DomainControllerCS.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "wapPublicDNS": {
            "value": "[reference('WAPServer').outputs.wapfqdn.value]"
          },
          "webPublicDNS": {
            "value": "[parameters('domainName')]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').dc.name]"
          }
        }
      }
    },
    {
      "name": "ADFSserverDSC",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/DomainControllerDSC",
        "Microsoft.Resources/deployments/ADFSserver",
        "Microsoft.Resources/deployments/UpdateVNetDNS"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/ADFSserverDSC.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').adfs.name]"
          },
          "vmDCName": {
            "value": "[variables('vmConfiguration').dc.name]"
          }
        }
      }
    },
    {
      "name": "ADFSserverCS",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/DomainControllerCS"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/ADFSserverCS.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "wapPublicDNS": {
            "value": "[reference('WAPServer').outputs.wapfqdn.value]"
          },
          "webPublicDNS": {
            "value": "[parameters('domainName')]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').adfs.name]"
          },
          "vmDCName": {
            "value": "[variables('vmConfiguration').dc.name]"
          }

        }
      }
    },
    {
      "name": "WAPServerDSC",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/DomainControllerDSC",
        "Microsoft.Resources/deployments/WAPServer",
        "Microsoft.Resources/deployments/UpdateVNetDNS"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/WAPServerDSC.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "domainName": {
            "value": "[parameters('domainName')]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').wap.name]"
          }
        }
      }
    },
    {
      "name": "WAPServerCS",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "Microsoft.Resources/deployments/ADFSserverCS"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('assetLocation'), '/Templates/NestedDeploy/WAPServerCS.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetwork": {
            "value": "[variables('virtualNetwork')]"
          },
          "AdminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "envPrefix": {
            "value": "[parameters('envPrefix')]"
          },
          "assetLocation": {
            "value": "[parameters('assetLocation')]"
          },
          "wapPublicDNS": {
            "value": "[reference('WAPServer').outputs.wapfqdn.value]"
          },
          "vmName": {
            "value": "[variables('vmConfiguration').wap.name]"
          },
          "vmDCName": {
            "value": "[variables('vmConfiguration').dc.name]"
          },
          "vmADFSName": {
            "value": "[variables('vmConfiguration').adfs.name]"
          }

        }
      }
    }
  ],
  "outputs": {
  }
}